<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.brain.heartbeat</string>

    <key>ProgramArguments</key>
    <array>
        <string>{{CLAUDE_CODE_PATH}}</string>
        <string>--dangerously-skip-permissions</string>
        <string>-p</string>
        <string>Run a quick heartbeat check. Read .claude/heartbeat-prompt.md for instructions. Write output to briefing/heartbeat-today.md. Be fast and concise.</string>
        <string>--output-format</string>
        <string>text</string>
    </array>

    <key>WorkingDirectory</key>
    <string>{{BRAIN_PATH}}</string>

    <key>StartInterval</key>
    <integer>{{INTERVAL_SECONDS}}</integer>

    <key>StandardOutPath</key>
    <string>{{BRAIN_PATH}}/z-logs/heartbeat-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>{{BRAIN_PATH}}/z-logs/heartbeat-stderr.log</string>

    <key>RunAtLoad</key>
    <false/>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>
</dict>
</plist>
